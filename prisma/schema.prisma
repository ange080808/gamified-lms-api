generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  Student
  Teacher
}

model User {
  id         String  @id @default(uuid())
  username   String  @unique
  password   String
  role       Role
  firstName  String
  lastName   String?
  middleName String?
  age        Int
  gender     String
  address    String?
  email      String?
  uniqueId   String  @unique
  profileUrl String?
  avatar     String?
  expPoints  Int     @default(0)
  level      Int     @default(1)
}
